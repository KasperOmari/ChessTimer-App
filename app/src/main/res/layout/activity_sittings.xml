<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sittings">

    <TextView
        android:id="@+id/sittingstxt"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="17dp"
        android:text="Sittings"
        android:textColor="#000000"
        android:textSize="35sp" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cstMins"
        android:layout_marginEnd="13dp"
        android:text="done!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp" />

    <EditText
        android:id="@+id/cstMins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sittingstxt"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignLeft="@+id/sittingstxt" />

    <RadioGroup
        android:layout_width="207dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/sittingstxt"
        android:layout_marginTop="148dp"
        android:layout_alignLeft="@+id/sittingstxt">

        <RadioButton
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5 Minutes (defualt)" />

        <RadioButton
            android:id="@+id/btn10"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10 Minutes" />

        <RadioButton
            android:id="@+id/cstBtn"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Custom Time" />
    </RadioGroup>

</RelativeLayout>